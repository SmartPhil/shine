<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
	<session-factory>
		<!-- mysql database JDBC driver class -->
		<property name="connection.driver_class">com.mysql.jdbc.Driver</property>
		<!-- mysql localhost database -->
		<property name="connection.url">jdbc:mysql://localhost:3306/shine</property>
		<property name="connection.username">root</property>
		<property name="connection.password">phil</property>
		<property name="connection.pool_size">5</property>
		<!-- mysql dialect -->
		<property name="dialect">org.hibernate.dialect.MySQLDialect</property>
		<property name="show_sql">true</property>
		
		<mapping resource="com/shine/dto/User.hbm.xml"/>
		<mapping resource="com/shine/dto/Opportunity.hbm.xml"/>
		<mapping resource="com/shine/dto/FollowContent.hbm.xml"/>
		<mapping resource="com/shine/dto/ShineClass.hbm.xml"/>
		<mapping resource="com/shine/dto/Application.hbm.xml"/>
		<mapping resource="com/shine/dto/CallBackInfo.hbm.xml"/>
	</session-factory> 
</hibernate-configuration>